"
" Common settings for Vim/Neovim/IdeaVim
"

set nocompatible

let mapleader = " "

set number
set relativenumber

set cursorline
set cursorcolumn

set mouse=a

set encoding=utf-8

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set smartindent

set nowrap

set hlsearch
set incsearch
set ignorecase
set smartcase

set termguicolors

set scrolloff=8
set sidescrolloff=4

set updatetime=1000

set colorcolumn=120

